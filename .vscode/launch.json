{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug backend",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "args": [
        "app.main:app",
        "--reload",
        "--port",
        "8000",
        "--log-level",
        "debug"
      ]
    }
  ]
}
